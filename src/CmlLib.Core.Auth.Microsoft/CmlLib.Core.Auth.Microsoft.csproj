<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Library</OutputType>
  </PropertyGroup>
  <PropertyGroup>
    <TargetFrameworks>netstandard2.1</TargetFrameworks>
    <GenerateAssemblyInfo>true</GenerateAssemblyInfo>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <LangVersion>9.0</LangVersion>
    <Nullable>enable</Nullable>
    <Description>Minecraft login with Microsoft Xbox Live account</Description>
    <Copyright>Copyright (c) 2023 AlphaBs</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/CmlLib/CmlLib.Core.Auth.Microsoft</PackageProjectUrl>
    <RepositoryUrl>https://github.com/CmlLib/CmlLib.Core.Auth.Microsoft</RepositoryUrl>
    <Authors>ksi123456ab</Authors>
    <PackageTags>CmlLib Minecraft Login Auth Authentication Microsoft Xbox Live XboxLive</PackageTags>
    <Version>3.0.0-beta.1</Version>
    <PackageIcon>icon.png</PackageIcon>
    <RepositoryType>git</RepositoryType>
    <PackageId>CmlLib.Core.Auth.Microsoft</PackageId>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="CmlLib.Core">
      <Version>3.3.5</Version>
    </PackageReference>
    <!--<PackageReference Include="ConfigureAwait.Fody" Version="3.3.1" PrivateAssets="All" />-->
    <PackageReference Include="System.Text.Json" Version="7.0.1" />
    <PackageReference Include="XboxAuthNet" Version="3.0.0-beta.3" />

    <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleTo">
      <_Parameter1>CmlLib.Core.Auth.Microsoft.Test</_Parameter1>
    </AssemblyAttribute>
  </ItemGroup>
  <ItemGroup>
    <None Include="../../icon.png" Pack="true" Visible="false" PackagePath="" />
  </ItemGroup>
</Project>